@model SocialFly.Models.ConnectModel
@{
    ViewBag.Title = "GetByFilter";
}

<h2>GetByFilter</h2>

@using (Html.BeginForm("GetByFilter", "Connect", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Regions, "Region", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Region", new SelectList(Model.Regions, "RegionId", "RegionName"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Regions, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Followers, "Follower's", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Follower", new SelectList(Model.Followers, "FollowerId", "FollowerCount"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Followers, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Compensation, "Compensation", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Compensation", new SelectList(Model.Compensation, "CompId", "CompPay"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Compensation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>

    </div>
}
